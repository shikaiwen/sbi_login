{
  "manifest_version": 2,
  "name": "sbi_login",
  "description": "words remembering tool",
  "version": "1.0",
  "background":{
      "scripts":[
        "background.js",
        "jquery-1.12.4.js",
        "datatube.js"
      ]
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
    "js":[
      "jquery-1.12.4.js",
      "content.js",
      "jquery.cookie.js",
      "datatube.js"
    ]
  }
  ],
  "browser_action": {
  },
  // "web_accessible_resources": ["template.html","btn_myword_add.gif","btn_myword_del.gif","wordlib.html"],

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking"  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

